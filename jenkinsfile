pipeline {
    agent any 
    stages {
        stage('Compile Stage') { 
            steps {
               withMaven(maven : 'MAVEN_3_8'){
               			sh 'mvn clean compile'
               
               }
            }
        }
        stage('Testing stage') { 
            steps {
               withMaven(maven : 'MAVEN_3_8'){
               			sh 'mvn test'
               
               }
        }
        stage('Deployment Stage') { 
           steps {
               withMaven(maven : 'MAVEN_3_8'){
               			sh 'mvn deploy'
               
               }
        }
    }
}